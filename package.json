{
    "author": "The Samply Development Community",
    "name": "blaze-quality-reporting-ui",
    "version": "0.8.2",
    "description": "Experimental FHIR Quality Reporting Authoring UI",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "clean": "rm -r .webpack && rm -r out"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samply/blaze-quality-reporting-ui.git"
    },
    "license": "Apache-2.0",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin",
                        "win32"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {
                        "format": "ULFO"
                    }
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.js",
                                    "name": "main_window"
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "6.0.0-beta.52",
        "@electron-forge/maker-deb": "6.0.0-beta.52",
        "@electron-forge/maker-rpm": "6.0.0-beta.52",
        "@electron-forge/maker-squirrel": "6.0.0-beta.52",
        "@electron-forge/maker-zip": "6.0.0-beta.52",
        "@electron-forge/plugin-webpack": "6.0.0-beta.52",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@fullhuman/postcss-purgecss": "^2.3.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.5.3",
        "electron": "^15.5.5",
        "elm": "^0.19.1-2",
        "elm-analyse": "^0.16.5",
        "elm-hot-webpack-loader": "^1.1.6",
        "elm-test": "^0.19.1-1",
        "elm-webpack-loader": "^6.0.1",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.2.0",
        "node-loader": "^0.6.0",
        "node-sass": "^4.14.1",
        "postcss-loader": "^3.0.0",
        "purgecss": "^2.3.0",
        "resolve-url-loader": "^3.1.1",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.0",
        "url-loader": "^4.1.0",
        "webpack": "^4.43.0",
        "webpack-dev-server": "^3.11.0"
    },
    "dependencies": {
        "@electron-forge/maker-dmg": "^6.0.0-beta.52",
        "@electron-forge/maker-wix": "^6.0.0-beta.52",
        "@fortawesome/fontawesome-free": "^5.14.0",
        "electron-squirrel-startup": "^1.0.0",
        "material-design-icons": "^3.0.1",
        "postcss-cli": "^7.1.1",
        "purecss": "^1.0.1",
        "tailwindcss": "^1.4.6",
        "typeface-roboto": "0.0.75",
        "typeface-roboto-mono": "0.0.75"
    },
    "prettier": {
        "tabWidth": 4
    }
}
